{
  "cli": {
    "version": ">= 16.31.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "android": {
        "image": "latest"
      },
      "node": "20.18.0",
      "pnpm": "9.15.0"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "environment": "preview"  // ✅ Keep this for builds
    },
    "production": {
      "extends": "base",
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle"
      },
      "environment": "production"  // ✅ Keep this for builds
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal"
        // ❌ No "environment" needed here
      }
    }
  }
}
