# Server Configuration
PORT=3000
NODE_ENV=production

# API Security (optional - for temporary protection)
# Set to 'false' to disable API key authentication (useful for local dev)
API_AUTH_ENABLED=true
# Set a secure API key for production (only used if API_AUTH_ENABLED=true)
API_KEY=your-secret-api-key-change-this

# Scheduler Configuration
# Cron expression (default: every 30 minutes - '*/30 * * * *')
# For testing: '*/5 * * * *' (every 5 minutes)
SCHEDULER_CRON=*/30 * * * *

# Max users to challenge per tick (default: 1)
# Set higher to increase throughput (e.g., 3 = up to 3 users per tick)
MAX_USERS_PER_TICK=1

# Min hours between challenges for same skill (default: 4)
MIN_HOURS_BETWEEN_CHALLENGES=4

# Priority threshold - only challenge users with accuracy below this (default: 0.7)
# 0.7 means only challenge users with <70% accuracy
PRIORITY_THRESHOLD=0.7

# Supabase (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic (required for LLM challenge generation)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Expo Push Notifications (optional - for future push notification support)
EXPO_ACCESS_TOKEN=your-expo-access-token

# Opik (optional - for prompt versioning, A/B testing, and observability)
# Get your credentials from https://www.comet.com/opik
OPIK_API_KEY=your-opik-api-key
OPIK_WORKSPACE=your-workspace-name

# A/B Testing
# Enable/disable prompt A/B testing experiments
# When enabled, the system will randomly select between prompt variants
# and track which variant generated each challenge for analysis in Opik
# Set to 'true' to enable, 'false' to disable (default: false)
AB_TEST_CHALLENGE_PROMPT_ENABLED=false
